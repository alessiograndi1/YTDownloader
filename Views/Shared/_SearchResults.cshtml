@model IEnumerable<YTDownloader.Models.VideoResult>

@if(Model.Any())
{
    @foreach(var result in Model)
    {
        string embedLink = result.Url.Replace("/watch?v=", "/embed/");
        <div class="col-12 col-md-6 col-xl-4 mb-4">
            <iframe src="@embedLink" frameborder="0" width="420px" height="230px"></iframe>
            <div class="d-flex align-items-center justify-content-between">
                <p class="small text-truncate mb-0">@result.Title</p>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Download", "Home", new { Url = result.Url })">download</a>
            </div>
        </div>
    }
}
else
{
    <div class="text-muted">No results found!</div>
}