@model IEnumerable<YTDownloader.Models.VideoResult>

@if(Model.Any())
{
    @foreach(var result in Model)
    {
        if(result.Url != null)
        {
            string embedLink = result.Url.Replace("/watch?v=", "/embed/");
            <div class="col-12 col-md-6 col-xl-4 mb-4">
                <iframe src="@embedLink" frameborder="0" width="420px" height="230px"></iframe>
                <div class="d-flex align-items-center justify-content-end">
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Download", "Home", new { Url = result.Url })">
                        <i class="fas fa-download"></i>&nbsp;&nbsp;Download mp3   
                    </a>
                </div>
            </div>
        }
    }
}
else
{
    <div class="text-muted">No results found!</div>
}